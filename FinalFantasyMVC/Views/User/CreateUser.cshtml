@using FinalFantasyMVC.ViewModels
@model UserViewModel
@{
    ViewBag.Title = "CreateUser";
}

<h2>Create User</h2>
@using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
{
    <div class="form">
        @Html.LabelFor(model => Model.Form.FullName)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Form.FullName, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Form.FullName, "", new { @style = "color: red" })
        </div>
    </div>
    <div class="form">
        @Html.LabelFor(model => Model.Form.UserName)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Form.UserName, "", new { @class = "form-control" })
            @if (Model.message == null)
            {
                @Html.ValidationMessageFor(x => x.Form.UserName, Model.message, new { @style = "color: red" })
            }
            else
            {
                <span class="text-danger">
                    @Html.Raw(Model.message)
                </span>
            }
        </div>
    </div>
    <div class="form">
        @Html.LabelFor(model => Model.Form.UserPassword)
        <div class="form-group">
            @Html.PasswordFor(model => Model.Form.UserPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Form.UserPassword, "", new { @style = "color: red" })
        </div>
    </div>
    <div class="form">
        @Html.LabelFor(model => Model.Form.Email)
        <div class="form-group">
            @Html.TextBoxFor(model => Model.Form.Email, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Form.Email, "", new { @style = "color: red" })
        </div>
    </div>
    <input class="btn-success" type="submit" value="Create" />
}