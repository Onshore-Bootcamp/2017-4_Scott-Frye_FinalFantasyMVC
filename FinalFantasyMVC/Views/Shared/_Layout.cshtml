<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Final Fantasy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["UserName"] != null)
                    {
                        <li>@Html.ActionLink("Games", "Index", "Game")</li>
                    }
                    else
                    { }
                    @if (Session["UserName"] != null)
                    {
                        if ((Int64)Session["RoleID"] == 3)
                        {
                            <li>@Html.ActionLink("Users", "UserIndex", "User")</li>
                        }
                        else
                        { }
                    }
                    else
                    { }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserName"] != null)
                    {
                        <li>@Html.ActionLink("Logout", "LogOut", "Account")</li>
                    }
                    else
                    { }                   
                    @if (Session["UserName"] == null)
                    {
                        <li>@Html.ActionLink("Register", "CreateUser", "User")</li>
                    }
                    else
                    { }
                    @if (Session["UserName"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    }
                    else
                    { }
                    @if (Session["UserName"] != null)
                    {
                        <li>@Html.ActionLink(Session["UserName"].ToString(), "Index", "Home")</li>
                    }
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/JavaScript.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
